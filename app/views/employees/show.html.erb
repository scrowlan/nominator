<div class="row">
  <h2 class="text-center"><%= @employee.full_name %></h2>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
    <%= image_tag @employee.employee_image.thumb.to_s %>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    
    <%= render 'nominations/form' %>

    <% if signed_in? %>
        <%= link_to "Edit", edit_employee_path, :class => 'btn btn-primary form-control' %>
        <%= link_to "Delete", @employee, method: :delete, :class => 'btn btn-danger form-control top-margin-10' %>
      <% end %>
  </div>
</div>
<div class="row">
  <hr />
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Reason</th>
          <th>Nominator</th>
        </tr>
      </thead>

      <tbody>
      <% @nominations.each do |nomination| %>
        <tr>
          <td><%= nomination.reason %></td>
          <td><%= nomination.nominator %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Back', employees_path %>
