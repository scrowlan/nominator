<div class="row">
  <h1 class="text-center">All Nominations</h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nominee</th>
          <th>Reason</th>
          <th>Nominator</th>
          <th>Date</th>
        </tr>
      </thead>

      <tbody>
        <% @nominations.each do |nomination| %>
          <% if nomination.employee_id != nil %>
            <tr>
              <td><%= nomination.employee.fname %> <%= nomination.employee.lname %></td>
              <td><%= nomination.reason %></td>
              <td><%= nomination.nominator %></td>
              <td><%= nomination.created_at.to_date.strftime("%b %d") %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

